{
  "compilerOptions": {
    // 编译结果版本
    "target": "es6",
    "outDir": "",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "removeComments": true,
    "declaration": true,
    "types": ["node"],
    //  引入的库文件
    "lib": ["esnext"],

    "typeRoots": ["node_modules/@types", "./types"]
  },
  "include": ["./src/**.ts", "./types/**.d.ts"]
}